		div(data-role='content')
			form.join-chat-form(method="POST", action="/create-chat-user")
				fieldset
					strong Photo
					div.field
						label Choose your avatar
						ul.avatar-list
							li.selected
								a(href="#", class="avatar man-1")
							li
								a(href="#", class="avatar man-2")
							li
								a(href="#", class="avatar man-3")
							li
								a(href="#", class="avatar female-1")
							li
								a(href="#", class="avatar female-2")
							li
								a(href="#", class="avatar female-3")
							li
								a(href="#", class="avatar cute-monster-1")
							li
