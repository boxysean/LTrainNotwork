block PageScript
	script(src="/nowjs/now.js")
	script

		now.connected = function(){
			if(!utils.readCookie("notworkUser")){
				$.mobile.changePage("#missed-connection");
			}
		};
		now.getTotalPublicChatUser = function(total){	
			var msg = '('+total + ' total people are using the system.)';
			if(total == 1){
				msg = '('+total + ' person are using the system.)';
			}
			$(".total-people").text(msg);
		}
		notwork.app.initMissConnection();
